    "mysql": "^2.18.1",
    "nestjs-pino": "^3.1.2",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1",
    "pino-http": "^8.3.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "ts-morph": "^17.0.1",
